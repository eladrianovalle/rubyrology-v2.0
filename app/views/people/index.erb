<h2 class="font--ec font__s--l">PEOPLE</h2>
<table class="table table-condensed">
  <thead>
    <th class="text--brown">Name</th>
    <th class="text--brown">Birthdate</th>
    <th class="text--brown">Edit</th>
    <th class="text--brown">Delete</th>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr class="text--blk">
        <td>
          <a href="<%= "/people/#{person.id}" %>">
            <%= "#{person.first_name} #{person.last_name}" %>
          </a>
        </td>
        <td>
          <%= "#{person.birthdate.strftime("%B %d, %Y")}" %>
        </td>
        <td>
          <a href="<%= "/people/#{person.id}/edit" %>">Edit</a>
        </td>
        <td>
          <form action="<%= "/people/#{person.id}" %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input class="danger" type="submit" value="Delete">
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>


</table>